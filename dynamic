#include <stdio.h>
#include <stdlib.h>

int main() {
    
    int* p = (int*) malloc(5*sizeof(int)); // creates a pointer and 
    for(int i = 0; i < 5; i++)
        *(p+i) = i * 3;
    for(int j = 0; j < 5; j++)
        printf("%d\n", *(p+j));
        
    printf("Value = %d\n", *p);
    
    p = realloc(p,2*sizeof(int));
    
    free(p);
    
    return 0;
}
