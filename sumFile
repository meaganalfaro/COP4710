
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main() {
    // creates file pointer
    FILE *fp;
    fp = fopen("numbers.txt", "r");
    if(fp == NULL){
        printf("Unable to open file\n");
        exit(1);
    }
    
    int num , sum = 0;
    //fscanf is word by word and recieves file pointer, format specifcier, and variable pointer
    
    while(fscanf(fp, "%d", &num) != EOF){
        // gets the sum of each value 
        sum+= num;
    }
    //prints sum
    printf("Sum: %d\n", sum);

    return 0;
}
