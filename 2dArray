#include <stdio.h>

void printArray1(int (*p)[3]);
void printArray(int (*p)[4]);
void addition(int (*p)[4], int (*q)[4], int (*r)[4]);
void multiply(int (*p)[3], int (*q)[3], int (*r)[3]);

int main() {
    int x[3][4] = {{2,4,6,8},{1,3,5,7},{7,5,4,3}};
    //x[0] = {2,4,6,8}; <- can also be used
    int y[3][4] = {{9,8,7,6},{5,4,3,2},{1,3,5,7}};
    
    int z[3][4];
    
    int (*p)[4] = x; //<- parenthesis are important
    
    printf("%d\n",&x);
    printf("%d\n",&x[0]);
    printf("%d\n",&x[0][0]);
    //^^ will print the same thing
    
    printf("\n==========================================\n");
    printf("%d\n",p+1);
    printf("%d\t %d\t %d\n",p+1,&x[1][0],&x[1]);
    printf("%d\t %d\t %d\n",p+2, &x[2][0], &x[2]);
    printf("\n==========================================\n");
    printf("%d\t %d\n", (*p)+1, &x[0][1]);
    printf("%d\t %d\n", (*p)+2, &x[0][2]);
    printf("\n==========================================\n");
    printf("%d\t %d\n", *(*(p)),x[0][0]);
    printf("\n==========================================\n");
    printf("%d\t %d\n", *(*(p)+1), x[0][1]);
    printf("\n==========================================\n");
    printf("%d\t %d\n", x[1][0], *(*(p+1)));
    printf("\n==========================================\n");
    printf("%d\t %d\n", x[1][2], *(*(p+1)+2));
    printf("\n==========================================\n");
    printf("%d\t %d\n", x[2][1], *(*(p+2)+1));
    printf("\n==========================================\n");
     
     printf("X = \n");
     printArray(x);
     printf("Y = \n");
     printArray(y);
     addition(x,y,z);
     printf("Z = \n");
     printArray(z);
     
    printf("\n==========================================\n");
     
    int a[3][3] = {{2,6,3},{1,5,9},{1,4,7}};
    int b[3][3] = {{9,8,7},{6,5,4},{3,2,1}};
    int c[3][3];
    
    printf("A = \n");
    printArray1(a);
    printf("B = \n");
    printArray1(b);
    multiply(a,b,c);
    printf("C = \n");
    printArray1(c);

    return 0;
}

void printArray1(int (*p)[3]){
    for(int m = 0; m < 3; m++){
        for(int a = 0; a < 3; a++){
            printf("%d\t", *(*(p+m)+a));
        }
    }
    printf("\n");
}

void printArray(int (*p)[4]){
    for(int m = 0; m < 3; m++){
        for(int a = 0; a < 4; a++){
            printf("%d\t", *(*(p+m)+a));
        }
    }
    printf("\n");
}

void addition(int (*p)[4], int (*q)[4], int (*r)[4]){
    for(int m = 0; m < 3; m++){
        for(int a = 0; a < 4; a++){
            *(*(r+m)+a) = *(*(p+m)+a) + *(*(q+m)+a);
        }
    }
}

void multiply(int (*p)[3], int (*q)[3], int (*r)[3]){
    for(int m = 0; m < 3; m++){
        for(int a = 0; a < 4; a++){
            *(*(r+m)+a) = 0;
            for(int k = 0; k < 3; k++){
                *(*(r+m)+a) = *(*(p+m)+a) * *(*(q+m)+a);
            }
        }
    }
}
